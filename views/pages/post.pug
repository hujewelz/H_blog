extends ../layout.pug

block content
	.post-wrap
		.container.post-main
			.col-md-10
				form.form-horizontal(method='post', role='form', action='/article/post')
					.form-group
						label.col-sm-2.control-label(for='inputTitle') 文章标题
						.col-sm-10
							input.form-control#inputTitle(type='text', name='title', placeholder='填写文章标题')
					.form-group
						label.col-sm-2.control-label(for='inputAuthor') 作者
						.col-sm-10
							input.form-control#inputAuthor(type='text', name='author', placeholder='填写作者')
					.form-group
						label.col-sm-2.control-label(for='inputContext') 文章内容
						.col-sm-10
							textarea.form-control#inputContext(rows='30', cols='20', name='context')
					.form-group
							.col-sm-offset-2.col-sm-10
								button.btn.btn-default(type='submit') 发布



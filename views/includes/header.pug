header.main-header
	.container
		.row
			.col-sm-12
				a.branding(href="#")
					img(src="http://static.ghostchina.com/image/b/46/4f5566c1f7bc28b3f7ac1fada8abe.png")
nav.main-navgation
	.container
		.row
			.col-sm-12
				.collapse.navbar-collapse#main-menu
					ul.main-menu
						-var links = ['/', '/post', '/post', '/post', '/post', '/post']
						each item, i in ['首页', '论坛', '快捷手册', '中文文档', '下载', '关于我们']
							if i==0
								li.nav-current(role="presentation")
									a(href="/")= item
							else 
								li(role="presentation")
									a(href=links[i])= item
							
							
